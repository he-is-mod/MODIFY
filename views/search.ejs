<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Search</title>
  <link rel="stylesheet" href="/search.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://kit.fontawesome.com/2ff4bf09b6.js" crossorigin="anonymous"></script>
</head>

<body class="search-page">
<div class="container py-3 py-md-4">
  <!-- 🔍 Search Bar -->
  <form action="/search" method="GET" class="mb-3 mb-md-4">
    <div class="glass-search d-flex align-items-center">
      <input
        type="text"
        name="q"
        class="form-control glass-input"
        placeholder="Search for a track..."
        value="<%= typeof query !== 'undefined' ? query : '' %>"
      />
      <button type="submit" class="btn btn-outline-light ms-2 rounded-pill">
        <i class="fas fa-search"></i>
      </button>
    </div>
  </form>

  <!-- 🎵 Search Results -->
  <% if (results.length === 0) { %>
    <p class="text-light">No tracks found.</p>
  <% } else { %>
    <div class="d-flex flex-column gap-2 gap-md-3">
      <% results.forEach(track => { %>
        <div class="glass-card d-flex align-items-center p-2 p-md-3 rounded-4 shadow track-glass-card">
          <img src="<%= track.cover || '/default-cover.jpg' %>" class="rounded-4 me-2 me-md-3" alt="Album Art" />

          <div class="flex-grow-1 text-white">
            <h5 class="mb-0 track-title"><%= track.title %></h5>
            <small class="text-light artist-name">
              <%= track.artist_name ? track.artist_name : 'Unknown Artist' %>
            </small>
          </div>

          <form action="/nowPlaying/nowPlaying" method="GET" class="ms-2 ms-md-3">
            <input type="hidden" name="trackId" value="<%= track.id %>" />
            <button class="btn btn-outline-light rounded-pill px-2 px-md-3">
              <i class="fas fa-play"></i>
            </button>
          </form>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<!-- Footer -->
 <footer class="footer-nav">
  <div class="footer-icons d-flex justify-content-around align-items-center">
    <a href="/home"><i class="fas fa-home"></i></a>
    <% if (user) { %>
      <% if (user.role === 'musician') { %>
        <a href="/musician/profile"><i class="fas fa-user"></i></a>
      <% } else if (user.role === 'listener') { %>
        <a href="/listener/profile"><i class="fas fa-user"></i></a>
      <% } else { %>
        <a href="/"><i class="fas fa-user"></i></a>
      <% } %>
    <% } else { %>
      <a href="/login"><i class="fas fa-user"></i></a>
    <% } %>
    <a href="/nowPlaying/nowPlaying"><i class="fas fa-music"></i></a>
    <a href="/search"><i class="fas fa-search"></i></a>
  </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>