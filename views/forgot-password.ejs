<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Forgot Password - Modify</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Orbitron:wght@600&family=Poppins&display=swap"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/2ff4bf09b6.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/login.css" />
  </head>

  <body>
    <div
      class="container d-flex justify-content-center align-items-center min-vh-100"
    >
      <div class="glass-card text-center p-4 shadow">
        <h2 class="mb-4 app-title">
          <i class="fa-solid fa-music me-2 text-purple"></i> Modify
        </h2>

        <!-- FLASH MESSAGES -->
        <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
          <div class="alert alert-success"><%= success_msg %></div>
        <% } %>
        <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
          <div class="alert alert-danger"><%= error_msg %></div>
        <% } %>

        <h5 class="mb-3 text-light">Forgot Your Password?</h5>
        <p class="text-light small mb-4">
          Enter your email address and weâ€™ll send you a 6-digit reset code to change your password.
        </p>

        <form action="/forgot-password" method="POST">
          <div class="form-floating mb-3">
            <input
              type="email"
              name="email"
              class="form-control"
              id="email"
              placeholder="Email"
              required
            />
            <label for="email">
              <i class="fa-solid fa-envelope me-2"></i>Email address
            </label>
          </div>

          <button type="submit" class="btn btn-neon w-100 mb-3">
            <i class="fa-solid fa-paper-plane me-2"></i> Send Code
          </button>

          <div class="text-light mt-2">
            Remember your password?
            <a href="/login" class="text-glow ms-1">
              <i class="fa-solid fa-arrow-left"></i> Back to Login
            </a>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
